{
    "extends": [
        "tslint-config-airbnb",
        "tslint-react"
    ],
    "rules": {
        "function-name": false,
        "variable-name": [true, "check-format", "allow-leading-underscore"],
        "no-duplicate-imports": false,
        "prefer-template": [true, "allow-single-concat"],
        "import-name": false,
        "ter-indent": [true, 4],
        "max-line-length": [true, 150]
    },
    "linterOptions": {
        "exclude": [
            "dist"
        ]
    }
}